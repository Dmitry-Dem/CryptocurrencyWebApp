@model ConvertViewModel

@{
    ViewData["Title"] = "Converter";
}

<h1>Cryptocurrency Converter Calculator</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <input type="number" id="amount" class="form-control" placeholder="Enter Amount">
        </div>
        <div class="col-md-4">
            <input type="text" id="searchInputDataSource" list="autocompleteDataSource" class="form-control" placeholder="Search Source Currency">
            <datalist id="autocompleteDataSource">
                @foreach (var currency in Model.SourceCurrencies)
                {
                    <option value="@currency.Id">@(currency.Name + $" ({currency.Symbol})")</option>
                }
            </datalist>
        </div>
        <div class="col-md-4">
            <input type="text" id="searchInputDataTarget" list="autocompleteDataTarget" class="form-control" placeholder="Search Target Currency">
            <datalist id="autocompleteDataTarget">
                @foreach (var currency in Model.TargetCurrencies)
                {
                    <option value="@currency">@currency</option>
                }
            </datalist>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <button id="convertBtn" class="btn btn-primary">Convert</button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <p id="result"></p>
        </div>
    </div>
</div>